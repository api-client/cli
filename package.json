  "main": "build/main.js",
  "types": "build/index.d.ts",
  "type": "module",
  "bin": {
    "api-client": "./build/src/cli.js"
  },
  "author": {
    "name": "Pawel Uchida-Psztyc",
    "email": "pawel.psztyc@gmail.com"
  },
